// Capturar elementos del DOM
const inputNombre = document.getElementById("nombreAmigo");
const botonAgregar = document.getElementById("agregarAmigo");
const listaAmigos = document.getElementById("listaAmigos");
const botonSortear = document.getElementById("sortear");
const resultado = document.getElementById("resultado");

// Lista para almacenar los nombres
let amigos = [];

// Funci칩n para agregar nombres a la lista
botonAgregar.addEventListener("click", () => {
    const nombre = inputNombre.value.trim();
    if (nombre === "") {
        alert("Por favor, ingresa un nombre v치lido.");
        return;
    }
    amigos.push(nombre);
    actualizarLista();
    inputNombre.value = "";
});

// Funci칩n para actualizar la lista en pantalla
function actualizarLista() {
    listaAmigos.innerHTML = "";
    amigos.forEach((amigo) => {
        const li = document.createElement("li");
        li.textContent = amigo;
        listaAmigos.appendChild(li);
    });
}

// Funci칩n para realizar el sorteo
botonSortear.addEventListener("click", () => {
    if (amigos.length === 0) {
        alert("Agrega nombres antes de sortear.");
        return;
    }
    const index = Math.floor(Math.random() * amigos.length);
    resultado.textContent = `El amigo secreto es: ${amigos[index]}`;
});

